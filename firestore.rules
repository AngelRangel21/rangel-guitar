rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite la lectura pública para canciones y artistas, pero la escritura solo para administradores.
    match /songs/{songId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.isAdmin == true;
    }
    match /artists/{artistId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Los usuarios pueden leer y escribir en su propio documento. Los administradores pueden leer cualquier documento de usuario.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || (request.auth != null && request.auth.token.isAdmin == true);
      allow write: if request.auth.uid == userId;
    }
    
    // Cualquier usuario autenticado puede crear una solicitud de canción.
    // Solo los administradores pueden leer o eliminar las solicitudes.
    match /song-requests/{requestId} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && request.auth.token.isAdmin == true;
    }
  }
}
