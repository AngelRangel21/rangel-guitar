
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Los usuarios solo pueden leer/actualizar su propio perfil.
    // Los nuevos usuarios pueden crear su propio perfil al registrarse.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Las canciones pueden ser le√≠das por cualquiera.
    // Solo los administradores pueden crear, actualizar o eliminar canciones.
    match /songs/{songId} {
      allow read: if true;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Las solicitudes de canciones pueden ser creadas por cualquier usuario autenticado.
    // Solo los administradores pueden leer o eliminar solicitudes.
    match /song-requests/{requestId} {
      allow read, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow create: if request.auth.uid != null;
    }
  }
}
